<div class="container">
  <div class="row">
    <h5>ショッピングカート</h5>
  </div>

  <div class="row">
    <tr>
      <td>商品名</td>
      <td>単価(税込)</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>


    <tr>
      <td>
         <%#= link_to item_path(item.id) do %>
         <%#= image_tag item.image, :size =>'100x50' %>
         <%= @item.name %>
      </td>
      <td><%= @item.price %></td>


      <%= @cart_items.each do |cart_item| %>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.subtotal %></td>
      <% @合計金額 += cart_item.subtotal %>
    </tr>
      <% end %>

    <tr>
      <td>合計金額</td>
      <td><%= @cart_item.amount %></td>
    </tr>

    <tr>
      <td>
        <% if @cart_item.user == current_user %>
      <% link_to "削除”,
      </td>
    </tr>

  </div>
</div>
