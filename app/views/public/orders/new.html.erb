<div class="container">
  <div class="row">
    <div class="col-3 alert-secondary text-center">
    <h5>注文情報入力</h5>
    </div>
  </div>
  <div class="row">
    <table class="mt-5 w-100">
      <thead>
        <td class="font-weight-bold">支払方法</td>
      </thead>
      <%= form_with model: @order do |f| %>
      <tbody>
        <tr>
          <td class="pt-2">
          <%= f.radio_button :payment_method, "credit_card" %>
          <%= f.label :payment_method_credit_card, "クレジットカード" %>
          </td>
        </tr>
        <tr>
          <td class="pt-2">
          <%= f.radio_button :payment_method, "transfer" %>
          <%= f.label :payment_method_transfer, "銀行振込" %>
          </td>
        </tr>

      </tbody>
      <thead>
        <tr>
          <td class="font-weight-bold">お届け先</td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
           <%= @customer.address_display %>
          </td>
        </tr>
      </tbody>
       <% end %>


  </div>

