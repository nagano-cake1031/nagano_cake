<div class="container">
  <div class="row">

    <table>
      <div class="mt-5 pl-5 bg-warning mb-5 font-weight-bold col-5">
        <h5>商品一覧</h5>
      </div>
    </table>
    </div>

    <div class="row">
    <tbody>
      <table class="col-12 .justify-content-around d-flex justify-content-center ">
       <% @items.each do |item| %>
       <tr>
           <td>
            <%= link_to item_path(item.id) do %>
          　<%= image_tag item.image, :size =>'200x100' %>
          　<% end %>
           </td>
       </tr>
       <tr>
         　<td><%= link_to item.name, item_path(item.id) %></td>
       </tr>
       <tr>
         　<td>￥<%= item.price %></td>
       </tr>
      <% end %>
      </table>
    </tbody>
    </div>

  </div>
</div>