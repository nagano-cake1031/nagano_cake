<h3 class="font-weight-bold mb-5">ログイン</h3>

<%= form_with model: @admin, url: admin_session_path do |f| %>

  <div class="field">
    <tr>
      <td><%= f.label :メールアドレス %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "pr-5" %></td>
    </tr>
  </div>

  <div class="field">
    <tr>
      <td> <%= f.label :パスワード %></td>
      <td><%= f.password_field :password, autocomplete: "current-password", class: "pr-5 mb-5" %></td>
    </tr>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログイン情報を保存 %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn-primary p-2 my-4 rounded" %>
  </div>
 <% end %>
<%= render "admin/shared/links" %>
