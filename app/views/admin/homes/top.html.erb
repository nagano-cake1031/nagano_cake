<div class="container">
  <div class="row">
    <div class="col-3 alert-secondary text-center">
    <h5>注文履歴一覧</h5>
    </div>
  </div>

  <div class="row">
    <table class="mt-5 col-8">
      <thead>
        <tr>
          <th class="py-3 border alert-secondary">購入日時</th>
          <th class="py-3 border alert-secondary">購入者</th>
          <th class="py-3 border alert-secondary">注文個数</th>
        </tr>
      </thead>

      <% @order_details.each do |order_detail| %>
      <tbody>
        <tr>
          <td class="py-2 border-top border-bottom"><%= order_detail.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td class="py-2 border-top  border-bottom"><%= order_detail.order_id %></td>
          <td class="py-2 border-top  border-bottom"><%= order_detail.amount %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>

    <div class="row">
      <table>
       <footer class="pl-5 pt-5 pb-5 mx-auto">
        <%= paginate @order_detail %>
      </footer>
      </table>
    </div>
  </div>
