<div class="container">
  <div class="row">
    <div class="col-3 alert-secondary text-center">
    <h5>注文履歴一覧</h5>
    </div>
  </div>

  <div class="row">
    <table class="mt-5 col-8">
      <thead>
        <tr>
          <th class="py-3 border alert-secondary">購入日時</th>
          <th class="py-3 border alert-secondary">購入者</th>
          <th class="py-3 border alert-secondary">注文個数</th>
        </tr>
      </thead>

      <% @order.each do |order| %>
      <tbody>
        <tr>
          <td class="py-2 border-top border-bottom"><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M"), admin_order_path(order) %></td>
          <td class="py-2 border-top  border-bottom"><%= order.customer.last_name %><%= order.customer.first_name %></td>
          <% @sum = 0 %>
          <% order.order_details.each do |order_detail| %>
          <% @sum = @sum + order_detail.amount %>
          <% end %>
          <td class="py-2 border-top  border-bottom"><%= @sum %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>

    <div class="row">
      <table>
       <footer class="pl-5 pt-5 pb-5 mx-auto">
        <%= paginate @order %>
      </footer>
      </table>
    </div>
  </div>
