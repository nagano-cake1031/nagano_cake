<div clas="container">
  <div class="row">
    <div class="mx-auto">


   <h5 class="col-5 mt-5 bg-warning mb-5 p-2 text-center">商品編集</h5>

    <body class="m-5">
    <%= form_with model: @item, method: :patch, url: admin_item_path(@item) do |f| %>
    
    <table class="mb-3 pr-5 center-block">
    <tr>
      <td><label for="inputImage">商品画像</label></td>
      <td><%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %> </td>
    </tr>
    </table>

    <table class="mt-3">
    <tr>
      <td><label for="inputName">商品名</label></td>
      <td><%= f.text_field :name, autofocus: true, id:"@item", placeholder:"商品名" %></td>
    </tr>
    </table>

    <table class="mt-3">
      <tr>
      <td><label for="inputName">商品説明</label></td>
      <td><%= f.text_field :introduction, autofocus: true, id:"inputName", placeholder:"商品説明" %></td>
    </tr>
    </table>

    <table class="mt-3">
      <tr>
      <td><label for="inputName">税抜価格</label></td>
      <td><%= f.text_field :price, autofocus: true, id:"inputName", placeholder:"税抜価格" %>円</td>
    </tr>
    </table>

    <div class="mt-5 p-10 w-15 m-5 p-5">
      <%= f.submit "変更を保存", class: "btn-success p-3 rounded" %>
    </div>

    <% end %>
    </body>
  </div>
  </div>
</div>
