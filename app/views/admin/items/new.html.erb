<div clas="container">
  <div class="row">
    <div class="mx-auto">


   <h5 class="col-5 mt-5 alert-secondary mb-5 p-2 text-center">商品新規登録</h5>

    <body class="m-5">
    <%= form_with model: @item, url: admin_items_path do |f| %>

    <table class="mb-3 pr-5 center-block">
    <tr>
      <td>商品画像</td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    </table>

    <table class="mt-3">
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    </table>

    <table class="mt-3">
      <tr>
      <td>商品説明</td>
      <td><%= f.text_field :introduction %></td>
    </tr>
    </table>

    <table class="mt-3">
      <tr>
      <td>税抜価格</td>
      <td><%= f.number_field :price %>円</td>
    </tr>
    </table>

    <div class="mt-5 p-10">
      <%= f.submit "新規登録", class: "btn-success p-2 round" %>
    </div>

    <% end %>
    </body>
  </div>
  </div>
</div>


