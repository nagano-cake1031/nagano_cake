<div class="container">
    <div class="row">
       <table>
            <div class="mt-5 p-1 text-center alert-secondary col-2 mb-3">
            <h5>会員一覧</h5>
            </div>
       </table>

        <body>
        <table class="mt-3 w-50 text-left table table-striped col-12">
            <tr>
                <th class="pl-5">会員ID</th>
                <th class="col-5">氏名</th>
                <th>メールアドレス</th>
            </tr>
        </table>

        <% @customers.each do |customer| %>
        <table class="mt-2 mb-2 w-50 text-left border-top col-12">
            <tr>
                <td class="pl-5 pt-2 pb-2 co1-3"><%= customer.id %></td>
                <td class="col-5 text-center">
                  <%= link_to customer.last_name, admin_customer_path(customer.id) %>
                  <%= link_to customer.first_name, admin_customer_path(customer.id) %>
                </td>
                <td class="text-center col-6"><%= customer.email %></td>
            </tr>
        </table>
        <% end %>
        </body>

        <footer class="pl-5 border-top pt-3 w-50 col-12 pb-5 text-center">
        <%= paginate @customer %>
        </footer>
  </div>
</div>